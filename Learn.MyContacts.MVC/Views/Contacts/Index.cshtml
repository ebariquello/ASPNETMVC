@model IEnumerable<Learn.MyContacts.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h2>Agenda de Contatos</h2>

<p>
    <a asp-action="Create">Novo Contato</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ContactID">Ver Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
